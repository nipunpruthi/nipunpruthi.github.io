{{- /* Sitemap: entity-escaped (transform.XMLEscape). No priority/changefreq (Google ignores). lastmod when set. */ -}}
{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n\n" | safeHTML }}<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

{{ range where .Pages "Sitemap.Disable" "ne" true }}
{{ if .Permalink }}
   <url>
      <loc>{{ .Permalink | transform.XMLEscape | safeHTML }}</loc>
{{ if not .Lastmod.IsZero }}      <lastmod>{{ .Lastmod.UTC.Format "2006-01-02" }}</lastmod>
{{ end }}
   </url>
{{ end }}
{{ end }}
</urlset>
