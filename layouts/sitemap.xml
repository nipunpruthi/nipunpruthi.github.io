{{- /* Custom sitemap: no standalone="yes"; XML declaration must be at byte 0 (no leading newline) */ -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<urlset xmlns=\"http://www.sitemaps.org/schemas/sitemap/0.9\" xmlns:xhtml=\"http://www.w3.org/1999/xhtml\">" | safeHTML -}}
{{- range where .Pages "Sitemap.Disable" "ne" true }}
{{- if and .Permalink (not (findRE `schema-person|schema-website` .Permalink)) }}
  <url>
    <loc>{{ .Permalink }}</loc>{{ if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.UTC.Format "2006-01-02T15:04:05Z" }}</lastmod>{{ end }}
  </url>
{{- end }}
{{- end }}
</urlset>
